{
  "extends": "@tsconfig/node17/tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/app/**/*"],
  "exclude": ["node_modules"]
}
